<div style="margin-top: 100px" class="text-center">
<h1>List of boats</h1>
</div>


<div class="container">
  <div class="row">
    <% @boats.each do |boat| %>
    <%=link_to boat_path(boat), class: "col-6 card-outer-link" do %>
    <div class="card-trip mb-5 mt-5">
      <img src=<%= boat.photo %> />
        <div class="card-trip-infos">
          <div>
            <h3><%= boat.name%></h3><h2>Brand - Model: <%= boat.brand_model.name %></h2>
            <p><%= boat.description %></p>
            <p><%= boat.address %></p>
          </div>
          <div><h2 class="card-trip-pricing">Capacity: <%= boat.capacity %></h2><h2 class="card-trip-pricing"> Price: <%= boat.price %></h2>
          </div>
        <img src="<%= boat.user.photo %>" class="card-trip-user avatar-bordered" />
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

<div class='container'>
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>



