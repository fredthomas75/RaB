<div class="pl-5 pr-5 mt-5 mb-5">
<div class="card-trip">
  <img src=<%= @boat.photo %> />
  <div class="card-trip-infos">
    <div>
      <h2><%= @boat.name%></h2>
    </div>
    <div>
    <h2 class="card-trip-pricing">Capacity: <%= @boat.capacity %></h2>
    <h2 class="card-trip-pricing">Price per night: <%= @boat.price %></h2>
    <img src="<%= @boat.user.photo %>" class="card-trip-user avatar-bordered" />
    </div>
  </div>
</div>

<div class="container">
     <p> <%=@boat.description%></p>

     <p class="btn btn-danger"><%= link_to "Delete", boat_path(@boat), method: :delete %></p>
    <p class="btn btn-primary"><%= link_to "Edit", edit_boat_path(@boat) %></p>

</div>


</div>
