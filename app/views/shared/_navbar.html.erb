
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top navbar-transparent">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-center px-1">
      <!-- Pour l'utilisateur enregistré -->
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.url.present? %>
          <%= cl_image_tag current_user.photo, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
          <%= cl_image_tag 'https://res.cloudinary.com/mt2lab/image/upload/v1566330871/nobody_tjv22h.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <!-- DROPDOWN MENU -->
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "My bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Add a boat", new_boat_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <!-- Pour l'utilisateur anonyme/non-enregistré -->
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "white-nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
