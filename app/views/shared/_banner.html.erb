<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= asset_url 'login.jpg' %> );">
  <div class="container">
    <h1 style="margin-bottom: 8px;">RaB helps you to find <span class="wow">BOATS</span></h1>
    <p>Your boat will set sail for its destination shortly</p>

    <!-- SEARCH BAR - BEGIN -->
    <div style="width: 482px;">
      <%= form_tag "/", method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a boat"
        %>
        <%= submit_tag "Search", class: "btn btn-danger" %>
      <% end %>
    </div>
    <!-- SEARCH BAR - END -->
  </div>


</div>
